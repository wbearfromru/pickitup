{% extends 'layout.ejs' %}

{% block content %}

<section id="main-slider-create-game" class="carousel">
      <!-- Main component for a primary marketing message or call to action -->
      <div class="col-lg-3"></div>
      <div class="col-lg-6 well">
        <h1 style="text-align: center">Create Game</h1>
        <div class="row">
            <div class="col-lg-12 well">
                <form role="form" method="post">
                    <div class="form-group{% if errors.location %} has-error{% endif %}">
						<label class="control-label" for="exampleLocation">Location</label>
						<div class="input-group">
							<span class="input-group-btn">
							<button class="btn btn-default" id="locateLocationBtn" type="button">Go!</button>
							</span>
							<input id="locateLocation" type="text" class="form-control"/>
						</div><!-- /input-group -->
						<p class="help-block">Search for a location and then click anywhere on the map to save it.</p>
						<div class="col-lg-12" id="map-canvas" style="height: 300px;"></div>
						<p class="help-block">Search for a location and then click anywhere on the map to save it.</p>
						<input type="hidden" name="lat" id="lat" value="{{location.lat}}"/>
						<input type="hidden" name="lng" id="lng" value="{{location.lng}}"/>
                    </div>
                    <div class="form-group{% if errors.title %} has-error{% endif %}">
                      <label class="control-label" for="title">Title</label>
                      <input type="text" id="title" name="title" class="form-control" placeholder="ex: Sunday Night Basketball" value="{{game.title}}"/>
                    </div>
                    <div class="form-group{% if errors.startDate %} has-error{% endif %}">
						<label class="control-label" for="duration">Start Date</label>
						<div class="input-group date" id="startDatePicker" data-date-format="DD/MM/YYYY HH:mm">
							<input type="text" name="startDate" class="form-control" placeholder="ex: 14/04/2014 20:15"  value="{{game.startDate}}"/>
							<span class="input-group-addon"><span class="glyphicon glyphicon-time"></span> </span>
						</div>
					</div>
                    <div class="form-group{% if errors.duration %} has-error{% endif %}" >
						<label class="control-label" for="exampleEndDate">Duration</label>
						<div class="input-group date" id="durationPicker" data-date-format="HH:mm">
							<input type="text" id="duration"name="duration" class="form-control" placeholder="ex: 02:00"  value="{{game.duration}}"/>
							<span class="input-group-addon"><span class="glyphicon glyphicon-time"></span> </span>
						</div>
					</div>
                    <div class="form-group{% if errors.description %} has-error{% endif %}">
                      <label class="control-label" for="description">Description</label>
                      <textarea id="description" name="description" class="form-control" >{{game.description}}</textarea>
                    </div>
                    <button type="submit"  class="btn btn-default">Submit</button>
				</form>
            </div>
        </div>
       
        
        
      </div>
      <div class="col-lg-3"></div>
</section>

{% endblock %}
{% block pageJs %}
		<script>
	        $(function(){
	            createGameMapsDynamic();

                $('#startDatePicker').datetimepicker({
                });
                $('#durationPicker').datetimepicker({
                	pickDate: false,
                	defaultDate: "02:00",
                });
	        });
		</script>
{% endblock %}